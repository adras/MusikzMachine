<Window x:Class="MusikzMachine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusikzMachine"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="150"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Name="spKeys" Grid.Row="2">
            <Button Width="25" Height="150">C</Button>
            <Button Width="25" Height="150">D</Button>
            <Button Width="25" Height="150">E</Button>
            <Button Width="25" Height="150">F</Button>
        </StackPanel>
    </Grid>
</Window>
